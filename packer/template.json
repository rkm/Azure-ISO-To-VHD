{
    "builders":
    [
      {
        "type": "qemu",
        "iso_url": "http://download.rockylinux.org/pub/rocky/8.3/isos/x86_64/Rocky-8.3-x86_64-dvd1.iso",
        "iso_checksum": "4be83f5edf28209ce5caa06995c1c3fc5112d0d260b9e8c1cc2fecd384abcee0",
        "iso_checksum_type": "sha256",
        "output_directory": "disk",
        "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
        "disk_size": 5120,
        "format": "raw",
        "headless": true,
        "accelerator": "kvm",
        "http_directory": "/root/config",
        "ssh_username": "root",
        "ssh_password": "badPassword1.",
        "ssh_timeout": "25m",
        "vm_name": "baked",
        "cpus":4,
        "memory":8192,
        "net_device": "virtio-net",
        "disk_interface": "virtio",
        "boot_wait": "30s",
        "boot_command": [
          "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/rocky8.3-ks.cfg<enter><wait>"
        ]
      }
    ],
    "provisioners": [
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "script": "/root/bake-azure.sh",
        "type": "shell",
        "expect_disconnect": true
      },
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "script": "/root/deprovision.sh",
        "type": "shell",
        "pause_before": "10s"
      }
    ]
  }
